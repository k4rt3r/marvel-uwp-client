<Page
    x:Class="marvelReset.Views.LoggedIn"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:marvelReset.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
     Background="{StaticResource FondoBeige}">
    <Grid>
        <TextBlock x:ConnectionId='2' x:Name="tituloText"
                   Text="LOGGED IN"
                   Style="{StaticResource txtBienvenida}"/>
        <NavigationView x:ConnectionId='3'  x:Name="navView"
                         OpenPaneLength="240"
                         IsPaneOpen="False"
                         Foreground="{StaticResource BlancoForeground}">
            <!--SelectedItem="{Binding NavViewItem}"-->
                         

            <NavigationView.MenuItems>
                <NavigationViewItem x:ConnectionId='4' x:Name="character" 
                                    Icon="People" 
                                    Content="Character"
                                    Tag="Characters"/>
            </NavigationView.MenuItems>
        </NavigationView>
    </Grid>
</Page>


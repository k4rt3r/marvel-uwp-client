<Page
    x:Class="marvelReset.Views.charGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:marvelReset.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:model="using:marvelReset.Dtos"
    mc:Ignorable="d"
     Background="{StaticResource FondoBeige}">

    <Grid>
        <ListView x:ConnectionId='2' x:Name="listaPersonajes"
                  ItemsSource="{Binding MenuList}">
            <ListView.ItemTemplate>
                <DataTemplate                             >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"></ColumnDefinition>
                            <ColumnDefinition Width="200"></ColumnDefinition>

                        </Grid.ColumnDefinitions>
                        <Image x:Name="characterImage"
                               Source="{Binding thumbnail, Mode=TwoWay}"
                               Grid.Column="0"/>
                        <TextBlock  x:Name="characterName"
                                    Text="{Binding name, Mode=TwoWay}"
                                    Foreground="{StaticResource PitchBlack}"
                                    Grid.Column="1"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

